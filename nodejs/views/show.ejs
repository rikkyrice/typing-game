<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8">
    <title>E-Learning w/ Typing Training</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script type="text/javascript" src="/javascripts/javascript.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
  </head>
  <body>
    <div class="container">
      <div class="contanier-header">
        <h1 class="container-header"><%= name %></h1>
        <a href="/delete/<%= words[0].listID %>" class="delete-button">削除</a>
      </div>
      <div class="item-form-wrapper">
        <ul>
          <% words.forEach((word) => { %>
            <li>
              <p><%= word.name %></p>
            </li>
          <% }) %>
        </ul>
        <a href='/edit/<%= words[0].listID %>' class="edit-button">編集</a>
        <a href='/practice/<%= words[0].listID %>' class="button start-button">開始</a>
      </div>
      <a href="/index" class="cancel-button">もどる</a>
    </div>
  </body>
</html>
